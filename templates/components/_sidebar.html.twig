<aside class="blog-sidebar">
    <div class="widget sidebar-widget widget_categories">
        <h4 class="widget-title">Cat√©gories</h4>
        <ul class="list-wrap">
            {% for category in categories %}
                <li>
                    <a href="{{ path('default_category', {'slug': category.slug}) }}">
                        {{ category.name }}
                    </a>
                    <span class="float-right">({{ category.posts|length }})</span>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="widget sidebar-widget">
        <div class="sidePost-active">
            {% for post in posts %}
            <div class="sidePost__item" data-background="{{ asset('uploads/posts/' ~ post.image) }}">
                <div class="sidePost__content">
                    <a href="blog.html" class="tag"></a>
                    <h5 class="title tgcommon__hover"><a href="blog-details.html">{{ post.title }}</a></h5>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>



</aside>